<launch>

    <arg name="world_name" default="$(find-pkg-share robo_ball_catcher)/worlds/empty.world"/>
    <let name="urdf_path" value="$(find-pkg-share robo_ball_catcher)/urdf/robo_seeker.urdf.xacro" />

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <include file="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py">
        <arg name="world" value="$(var world_name)" />
        <arg name="use_sim_time" value="true"/>
    </include>

    <node pkg="gazebo_ros" exec="spawn_entity.py" output="screen" args="-topic robot_description -entity robo_seeker" />

</launch>